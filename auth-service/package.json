{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication service for Admission Jockey",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
